@model EL.EntityModels.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    @Html.Partial("~/Views/Front/Breadcrumbs.cshtml")

    <!-- BEGIN CONTAINER -->   
    <div class="container margin-bottom-40">
      <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 login-signup-page">
            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {          
               @Html.AntiForgeryToken()
               @Html.ValidationSummary(true)
                <h2>Login to your account</h2>
    
                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    @Html.TextBoxFor(m=>m.Email, new {@class = "form-control", @placeholder = "E-mail"})
                    @Html.ValidationMessageFor(m => m.Email)
                </div>                    
                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    @Html.PasswordFor(m=>m.Password, new {@class ="form-control", @placeholder = "Password"})
                    @Html.ValidationMessageFor(m => m.Password)
                    <a href="#" class="login-signup-forgot-link">Forgot?</a>
                </div>                    
    
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="checkbox-list">
                            <label class="checkbox">
                                      @Html.CheckBoxFor(m=>m.RememberMe)
                                      @Html.LabelFor(m=>m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <button type="submit" class="btn theme-btn pull-right">Login</button>
                    </div>
                </div>
    
                <hr>
                @Html.Partial("_OauthPartial")
            }
        </div>
     </div>
  </div>
    <!-- END PAGE CONTAINER -->

@section Header
{
    @Html.Partial("~/Views/Base/Header.cshtml")
}
@section JsLoader
{
    @Html.Partial("~/Views/Base/JsLoader.cshtml");
}